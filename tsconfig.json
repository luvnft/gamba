{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "baseUrl": "https://metavegas.live",  // Add this line
    "declaration": true,
    "strict": true,
    "jsx": "react-jsx",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "lib": ["DOM", "ESNext", "node"] // Ensure the libraries are included correctly
  },
  "include": [
    "packages/**/src/**/*",
    "apps/**/src/**/*"
  ],
  "exclude": ["node_modules", "dist"]
}

